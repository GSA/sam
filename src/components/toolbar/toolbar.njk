<style>
  .toolbar {
    display: inline-block;
    border: 1px solid #fff;
    transition: all 0.2s ease-in-out;
    grid-column-start: 1;
    grid-column-end: 2;
  }

  .toolbar.expanded {
    border: 1px solid #d8d8d8;
    width: 300px;
    box-shadow: 0 14px 24px 0 rgba(0, 0, 0, 0.06);
    border-radius: 1px;
    grid-column-end: 3;
    grid-row-start: 1;
    grid-row-end: 3;
  }

  .toolbar.expanded .toolbar-dropdown {
    padding: 10px 15px;
  }

  .toolbar-dropdown {
    position: relative;
    transition: all 0.2s ease-in-out;
  }

  .toolbar-select {
    background-color: #F7F9FA;
    border: 1px solid #979797;
    padding: 6px;
    border-radius: 4px;
    width: 45px;
    height: 44px;
  }

  .toolbar-toggle-button {
    background-color: #fff;
    display: block;
    width: 31px;
    height: 29px;
    ;
    border: 1px solid #000000;
    padding: 5px;
    border-radius: 3px;
    box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.29);
  }

  .toolbar-toggle-button span {
    position: absolute;
    left: -999em;
  }

  .toolbar-toggle-button::before {
    content: '';
    display: block;
    background-color: #EFF6FB;
    border: 2px solid #112F4E;
    width: 9px;
    transition: all 0.3s ease-in-out;
  }

  .toolbar-toggle-button:hover::before {
    background-color: #B7F5BD;
  }

  .toolbar-toggle-button.collapsed::before {
    height: 9px;
  }

  .toolbar-toggle-button.expanded::before {
    height: 18px;
  }

  .toolbar-expanded-content {
    opacity: 0;
    display: none;
    transition: opacity 0.3s ease-in-out;
  }

  .toolbar-expanded-content.open {
    opacity: 1;
    display: block;
  }

  .accordion {
    padding: 12px 16px;
    border-top: 1px solid #d8d8d8;
    border-bottom: 1px solid #d8d8d8;
    border-left: 1px solid #d8d8d8;
    border-right: 1px solid #d8d8d8;
    background-color: #fff;
    margin-left: -1px;
    margin-right: -1px;
    margin-bottom: 6px;
  }

  .accordion.open {
    background-color: #EFF6FB;
    box-shadow: inset 0 1px 7px 0 rgba(30, 75, 198, 0.16);
    border-left: 1px solid #aac0d0;
    border-right: 1px solid #aac0d0;
    border-color: #aac0d0;
    transition: all 0.2s ease-in;
  }

  .accordion-header a {
    font-size: 16px;
    font-weight: 600;
    color: #373737;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
  }

  .accordion.open .accordion-header a {
    color: #0A3466;
  }

  .accordion-content {
    display: none;
  }

  .accordion.open .accordion-content {
    padding-top: 10px;
    display: block;
  }

  .page {
    margin: 20px;
    display: grid;
    grid-template-columns: 80px 235px auto;
    grid-template-rows: 46px auto;
  }

  .page-content-header {
    grid-column-start: 2;
    grid-column-end: -1;
    grid-row-start: 1;
    grid-row-end: 2;
    align-self: center;
  }

  .toolbar.expanded+.page-content-header {
    grid-column-start: 3;
  }

  .page-content {
    grid-column-start: 1;
    grid-column-end: -1;
    grid-row-start: 2;
    grid-row-end: -1;
  }

  .toolbar.expanded+.page-content-header+.page-content {
    grid-column-start: 3;
  }

  .accordion-content nav{
    border: 2px solid #D6D7D9;
    border-radius: 0px 6px 6px 0px;
    background-color: white;
  }

  .accordion-content nav .usa-sidenav{
    border-bottom: none;
  }
</style>


