<h4>SDS Search Example</h4>
<div class="sds-search">
  <form class="usa-search usa-search--small">
    <div role="search" class="search">
      <label class="usa-sr-only" for="search-input">Search Here</label>
      <input class="usa-input" id="search-input" type="search" name="search" placeholder="Search Here">
      <button class="usa-button" type="submit">
        <span class="usa-sr-only">Search</span>
      </button>
    </div>
  </form>
</div>

<h4>SDS Dropdown + Search Example</h4>
<div class="sds-search">
  <form class="usa-search usa-search--small">
    <label class="usa-sr-only"  for="search-options">Select Here</label>
    <select class="usa-select" name="options" id="search-options">
      <option value="value">- Select -</option>
      <option value="value1">Option A</option>
      <option value="value2">Option B</option>
      <option value="value3">Option C</option>
    </select>
    <div role="search" class="search">
      <label class="usa-sr-only" for="search-dropdown">Search Here</label>
      <input class="usa-input" id="search-dropdown" type="search" name="search" placeholder="Search Here">
      <button class="usa-button" type="submit">
        <span class="usa-sr-only">Search</span>
      </button>
    </div>
  </form>
</div>

<h4>SDS Inverse Dropdown + Search Example</h4>
<div class="sds-search">
  <form class="usa-search usa-search--small usa-search--inverse">
    <label class="usa-sr-only"  for="inverse-search-options">Select Here</label>
