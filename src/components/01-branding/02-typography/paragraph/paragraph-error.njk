<table class="usa-table">
  <caption>Error Paragraph</caption>
  <thead>
    <tr>
      <th scope="col">Style</th>
      <th scope="col">Markup</th>
      <th scope="col">Configuration</th>
    </tr>
  </thead>
  <tbody>
    {% for item in items %}
    <tr>
      <th scope="row"><p class="{{ item.class }}">{{ item.label }}</p></th>
      {% if item.class %}
      <td>{{ ('<p class="' + item.class + '"></p>') | escape }}</td>
      {% else %}
      <td>{{ '<p></p>' | escape }}</td>
      {% endif %}
      <td>Weight: {{ item.weight }} / Size: {{ item.size }} / Line Height: {{ item.lheight }} / Color: {{ item.color }}</td>
    </tr>
    {% endfor %}

